<% include ./partials/head %>
  <% include ./partials/header %>

 
      <div class="row">
        <div class="col-md-8">
          <div id="map-canvas" style="height: 600px; width: auto;">
          </div>
        </div>
        <div class="col-md-4">
          <h2>Alerts:</h2>
          <%  alerts.forEach(function(dataRow) { %>
            <% const levels = ['low', 'medium', 'high']; let tl =dataRow["threatlevel"];  let tlclass = levels[tl]; let tt =dataRow["type"];   %>
              <h2 class='<%= tlclass %>'><%= tt %></h2>
            <%})%>
          <h2>Reports received:</h2>
          <%  reports.forEach(function(dataRow) { %>
          <div>
            <% let us = dataRow["userid"]; let tl =dataRow["threatlevel"]; let td = new Date(); td = Math.floor(td.getTime()/1000 - dataRow["timestamp"]); let str; td<60 ? str = td + " s " : (td<3600 ? str = Math.floor(td/60)+ " mins " : str = Math.floor(td/3600) + " hrs "); %>
            <span class='<%= tl %>'><%= tl %>:</span>&nbsp&nbsp<span><%= us %></span>&nbsp&nbsp&nbsp<span><%= str %> ago</span>
          </div>
          <% })%>

        </div>
      </div>


    <% include ./partials/footer %>